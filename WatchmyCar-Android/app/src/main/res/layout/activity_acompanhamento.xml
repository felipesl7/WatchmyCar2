<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="365dp"
            android:layout_height="150dp"
            app:srcCompat="@mipmap/ic_launcher_foreground" />

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_viewInic"
            android:layout_gravity="center"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:elevation="6dp"
            card_view:cardCornerRadius="2dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:background="@android:color/transparent"
                android:backgroundTint="@android:color/transparent"
                app:srcCompat="@mipmap/ic_btn_road" />

            <Button
                android:id="@+id/btnInicViagem"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@android:color/transparent"
                android:text="Iniciar Viagem"
                android:textColor="@color/colorPrimary" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_viewCad"
            android:layout_gravity="center"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:elevation="6dp"
            card_view:cardCornerRadius="2dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:backgroundTint="@android:color/transparent"
                app:srcCompat="@mipmap/ic_btn_add" />

            <Button
                android:id="@+id/btnCadVeiculo"
                android:layout_width="365dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@android:color/transparent"
                android:backgroundTintMode="src_over"
                android:breakStrategy="simple"
                android:text="Cadastrar Veiculo"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_viagens"
            android:layout_gravity="center"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:elevation="6dp"
            card_view:cardCornerRadius="2dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:background="@android:color/transparent"
                android:backgroundTint="@android:color/transparent"
                app:srcCompat="@mipmap/ic_btn_map" />

            <Button
                android:id="@+id/btnVisuViagens"
                android:layout_width="365dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@android:color/transparent"
                android:text="Visualizar Viagens"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp" />
        </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>